<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/pg_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPgName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PG Name"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvPgArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Area: XYZ"/>

    <TextView
        android:id="@+id/tvPgRent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rent: â‚¹4500"/>

    <TextView
        android:id="@+id/tvContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact: 9876543210"
        android:textColor="@android:color/holo_blue_dark"
        android:autoLink="phone"
        android:clickable="true" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: abc@example.com"
        android:textColor="@android:color/holo_blue_dark"
        android:autoLink="email"
        android:clickable="true"/>

</LinearLayout>
