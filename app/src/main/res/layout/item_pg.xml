<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:backgroundTint="#FDF0D5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/pgNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PG Name"
                android:textSize="18sp"
                android:textColor="#003049"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/bookmarkImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_bookmark_border"
                android:contentDescription="Bookmark Icon"
                android:tint="@color/wish_btn"
                tools:ignore="DuplicateIds,UseAppTint" />
        </RelativeLayout>

        <TextView
            android:id="@+id/pgAreaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textColor="#669BBC" />

        <TextView
            android:id="@+id/pgRentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚¹ Rent"
            android:textColor="#003049"
            android:textStyle="bold"
            android:layout_marginTop="6dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/emailButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:backgroundTint="@color/btn1"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/callButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Call"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/btn1"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
