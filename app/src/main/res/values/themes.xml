<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PGFinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:statusBarColor">@color/primaryDark</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="materialCardViewStyle">@style/Widget.PGFinder.Card</item>
    </style>

    <style name="Widget.PGFinder.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="Widget.PGFinder.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
